<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProfileActivity"
        android:background="@drawable/general_background">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay"

            app:titleTextColor="@color/colorPrimary"
            app:title="We"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">


        <Button android:layout_width="150dp" android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:text="Select photo"
                android:background="@drawable/btn_selectphoto" android:id="@+id/btnSelectphoto"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center"
                android:id="@+id/CircleImageView"
                android:layout_marginTop="-150dp"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorPrimary"
                android:src="@mipmap/ic_launcher"
        />



        <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="Name"
                android:drawablePadding="10dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="10dp" android:id="@+id/etNameProfile"/>
        <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="Surname"
                android:drawablePadding="10dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="10dp" android:id="@+id/etSurnameProfile"/>
        <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:drawablePadding="10dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="10dp" android:id="@+id/etMailProfile"/>


        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_signin"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textSize="21sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" android:id="@+id/btnConfirmProfile"/>


    </LinearLayout>



</RelativeLayout>


